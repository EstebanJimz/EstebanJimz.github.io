---
import MainLayout from '../layouts/MainLayout.astro';
import SpiderManAnimation from '../components/SpiderManAnimation.astro';
import BannerSection from '../components/sections/BannerSection.astro';
import BowlingScene from '../components/sections/BowlingScene.astro';
import ArcadeScene from '../components/sections/ArcadeScene.astro';
import GiftScene from '../components/sections/GiftScene.astro';
import DessertScene from '../components/sections/DessertScene.astro';
import FinalSection from '../components/sections/FinalSection.astro';
---

<MainLayout 
  title="Para Majito - El Storyboard ❤️"
  description="Una historia de amor contada al estilo cómic, con carreras, desafíos y mucho cariño para la Player 1 más increíble"
>
  <!-- Spider-Man Animation -->
  <SpiderManAnimation />
  
  <!-- Banner/Hero -->
  <BannerSection />
  
  <!-- Scene 1: Bowling -->
  <BowlingScene />
  
  <!-- Scene 2: Arcade -->
  <ArcadeScene />
  
  <!-- Scene 3: Gift/Juguetón -->
  <GiftScene />
  
  <!-- Scene 4: Dessert/Postres -->
  <DessertScene />
  
  <!-- Final Section with CTF & Game -->
  <FinalSection />
</MainLayout>

<style is:global>
  /* Smooth scrolling */
  html {
    scroll-behavior: smooth;
  }
  
  /* Remove default section spacing for tighter layout */
  section {
    scroll-margin-top: 2rem;
  }
</style>
