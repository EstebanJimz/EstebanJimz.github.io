---
// Spider-Man swinging animation component
---

<div class="spiderman-container" id="spiderman-container">
  <div class="web-line"></div>
  <div class="spiderman">
    <svg viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
      <!-- Spider-Man silhouette -->
      <g id="spiderman-body">
        <!-- Head -->
        <ellipse cx="50" cy="25" rx="15" ry="18" fill="#DC143C" stroke="#000" stroke-width="2"/>
        
        <!-- Eyes -->
        <ellipse cx="43" cy="23" rx="5" ry="8" fill="#FFF" stroke="#000" stroke-width="1.5"/>
        <ellipse cx="57" cy="23" rx="5" ry="8" fill="#FFF" stroke="#000" stroke-width="1.5"/>
        
        <!-- Body -->
        <ellipse cx="50" cy="55" rx="18" ry="25" fill="#DC143C" stroke="#000" stroke-width="2"/>
        
        <!-- Spider logo -->
        <path d="M 50 45 L 50 65 M 45 50 L 55 50 M 46 55 L 54 55 M 47 60 L 53 60" stroke="#000" stroke-width="1.5" fill="none"/>
        
        <!-- Arms -->
        <line x1="32" y1="45" x2="20" y2="35" stroke="#DC143C" stroke-width="6" stroke-linecap="round"/>
        <line x1="68" y1="45" x2="80" y2="35" stroke="#DC143C" stroke-width="6" stroke-linecap="round"/>
        
        <!-- Hands -->
        <circle cx="20" cy="35" r="4" fill="#DC143C" stroke="#000" stroke-width="1.5"/>
        <circle cx="80" cy="35" r="4" fill="#DC143C" stroke="#000" stroke-width="1.5"/>
        
        <!-- Legs -->
        <line x1="45" y1="75" x2="40" y2="95" stroke="#1E3A8A" stroke-width="6" stroke-linecap="round"/>
        <line x1="55" y1="75" x2="60" y2="95" stroke="#1E3A8A" stroke-width="6" stroke-linecap="round"/>
        
        <!-- Feet -->
        <ellipse cx="40" cy="95" rx="5" ry="3" fill="#DC143C" stroke="#000" stroke-width="1.5"/>
        <ellipse cx="60" cy="95" rx="5" ry="3" fill="#DC143C" stroke="#000" stroke-width="1.5"/>
        
        <!-- Web pattern on suit -->
        <path d="M 35 50 Q 50 48 65 50 M 38 60 Q 50 58 62 60" stroke="#000" stroke-width="0.8" fill="none" opacity="0.5"/>
      </g>
    </svg>
  </div>
</div>

<style>
  .spiderman-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    pointer-events: none;
    z-index: 1000;
    overflow: hidden;
    opacity: 0;
    transition: opacity 0.5s ease;
  }
  
  .spiderman-container.active {
    opacity: 1;
  }
  
  .web-line {
    position: absolute;
    width: 3px;
    height: 250px;
    background: linear-gradient(to bottom, 
      transparent, 
      rgba(255, 255, 255, 0.9) 20%, 
      rgba(255, 255, 255, 0.9) 80%, 
      transparent
    );
    top: -250px;
    left: 50%;
    transform-origin: top center;
    animation: web-swing 8s ease-in-out infinite;
    filter: drop-shadow(0 0 3px rgba(255, 255, 255, 0.8));
  }
  
  .spiderman {
    position: absolute;
    width: 100px;
    height: 100px;
    top: 50px;
    left: -150px;
    animation: spiderman-swing 8s ease-in-out infinite;
    filter: drop-shadow(5px 5px 0 #000);
  }
  
  .spiderman svg {
    width: 100%;
    height: 100%;
    animation: spiderman-rotate 8s ease-in-out infinite;
  }
  
  @keyframes spiderman-swing {
    0% {
      left: -150px;
      top: 50px;
    }
    25% {
      left: 25%;
      top: 80px;
    }
    50% {
      left: 50%;
      top: 60px;
    }
    75% {
      left: 75%;
      top: 80px;
    }
    100% {
      left: calc(100% + 50px);
      top: 50px;
    }
  }
  
  @keyframes spiderman-rotate {
    0%, 100% {
      transform: rotate(-15deg);
    }
    50% {
      transform: rotate(15deg);
    }
  }
  
  @keyframes web-swing {
    0%, 100% {
      transform: translateX(-50%) rotate(15deg);
    }
    50% {
      transform: translateX(-50%) rotate(-15deg);
    }
  }
  
  /* Mobile adjustments */
  @media (max-width: 768px) {
    .spiderman {
      width: 70px;
      height: 70px;
    }
    
    .web-line {
      width: 2px;
      height: 150px;
      top: -150px;
    }
  }
</style>

<script>
  // Trigger Spider-Man animation on scroll or page load
  function triggerSpiderman() {
    const container = document.getElementById('spiderman-container');
    if (container) {
      container.classList.add('active');
      
      // Remove after animation completes (8 seconds)
      setTimeout(() => {
        container.classList.remove('active');
      }, 8000);
    }
  }
  
  // Trigger on page load
  document.addEventListener('DOMContentLoaded', () => {
    setTimeout(triggerSpiderman, 1000);
  });
  
  // Optional: Trigger again when user reaches certain sections
  let hasTriggered = false;
  window.addEventListener('scroll', () => {
    if (!hasTriggered && window.scrollY > 300) {
      hasTriggered = true;
      triggerSpiderman();
    }
  });
</script>
