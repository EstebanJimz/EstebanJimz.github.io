    pointer-events: none;
  }
  
  .inner {
    position: relative;
    z-index: 1;
    text-align: center;
  }
  
  h1 {
    margin-bottom: var(--space-xl);
    animation: float 3s ease-in-out infinite;
  }
  
  @keyframes float {
    0%, 100% {
      transform: translateY(0) rotate(-2deg);
    }
    50% {
      transform: translateY(-10px) rotate(2deg);
    }
  }
  
  .intro-text {
    max-width: 800px;
    margin: 0 auto;
    font-size: 1.1rem;
  }
  
  .intro-text p {
    text-align: left;
  }
  
  @media (max-width: 768px) {
    #banner {
      min-height: auto;
      padding: var(--space-xl) var(--space-md);
    }
    
    .intro-text {
      font-size: 1rem;
    }
  }
</style>
