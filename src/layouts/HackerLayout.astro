---
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<!-- Google Fonts: JetBrains Mono (Terminal) & Bangers (Comic/Grafitti) -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Bangers&family=JetBrains+Mono:wght@400;700&display=swap" rel="stylesheet">
	</head>
	<body class="bg-[#0a0a0a] text-gray-300 font-mono overflow-x-hidden selection:bg-[#ff0055] selection:text-white">
		<!-- Matrix/Grid Background -->
		<div class="fixed inset-0 z-[-1] opacity-20 pointer-events-none" 
			style="background-image: linear-gradient(#00f3ff 1px, transparent 1px), linear-gradient(90deg, #00f3ff 1px, transparent 1px); background-size: 40px 40px;">
		</div>
        <div class="fixed inset-0 z-[-1] bg-gradient-to-b from-transparent via-[#0a0a0a]/80 to-[#0a0a0a]"></div>
		
		<slot />
	</body>
</html>

<style is:global>
    /* Custom Scrollbar for Hacker Aesthetic */
    ::-webkit-scrollbar {
        width: 8px;
    }
    ::-webkit-scrollbar-track {
        background: #0a0a0a;
    }
    ::-webkit-scrollbar-thumb {
        background: #333;
        border: 1px solid #00f3ff;
    }
    ::-webkit-scrollbar-thumb:hover {
        background: #00f3ff;
    }

    /* Terminal Cursor Animation */
    @keyframes blink {
        0%, 100% { opacity: 1; }
        50% { opacity: 0; }
    }
    .cursor-blink::after {
        content: '_';
        animation: blink 1s step-end infinite;
        color: #00f3ff;
    }
</style>
